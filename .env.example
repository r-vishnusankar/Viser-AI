# Viser AI Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Owner Information
OWNER_NAME=Vishnu

# AI Provider Configuration
# Options: "groq" | "openai" | "gemini" | "fallback"
AI_PROVIDER=groq

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o4-mini-2025-04-16

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# API Timeout (in seconds)
API_TIMEOUT=120

# Email Configuration (required for sending analysis reports, test emails)
EMAIL_ENABLED=True
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
# Gmail: Use App Password (NOT your regular password). Enable 2FA, then create at:
# https://myaccount.google.com/apppasswords
APP_PASSWORD=your_16_char_app_password
OWNER_EMAIL=your_email@gmail.com
# Default recipient when emailing reports (or you'll be prompted each time)
DEFAULT_RECIPIENT=recipient_email@gmail.com

# Local Server Configuration (for local_server.py)
USE_OPENAI=False
USE_FALLBACK=False

# Optional: Google Sheets live integration (testcase repository)
# Create a Service Account in Google Cloud, enable Sheets API, share your sheet with the SA email (Viewer)
# Paste the full JSON key here (or base64-encoded JSON)
# GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...@....iam.gserviceaccount.com",...}

# Optional: Unsplash API for dynamic background imagery in Nexora UI
# Get your key at https://unsplash.com/developers
# UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
